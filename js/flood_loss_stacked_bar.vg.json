{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Flood Loss by Category and Year across States (2022â€“2023)",
    "width": 790,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/picolloo/Assignment-2/main/data/flood_loss.csv"
    },
    "transform": [
        {
            "fold": [
                "Flood emergency loss",
                "Flood conservation loss"
            ],
            "as": [
                "Category",
                "LossValue"
            ]
        },
        {
            "calculate": "toNumber(datum.LossValue)",
            "as": "LossValueNum"
        },
        {
            "calculate": "toNumber(datum['total loss'])",
            "as": "totalLoss"
        }
    ],
    "encoding": {
        "x": {
            "field": "State",
            "type": "nominal",
            "axis": {
                "labelAngle": -45
            },
            "title": "State"
        },
        "y": {
            "aggregate": "sum",
            "field": "LossValueNum",
            "type": "quantitative",
            "title": "Flood Loss (RM)"
        },
        "color": {
            "field": "Category",
            "type": "nominal",
            "title": "Loss Type",
            "scale": {
                "range": [
                    "#1f77b4",
                    "#ff7f0e"
                ]
            },
            "legend":{"orient": "top-left"}
        },
        "xOffset": {
            "field": "Year",
            "type": "nominal",
            "title": "Year"
        },
        "tooltip": [
            {
                "field": "State"
            },
            {
                "field": "Year"
            },
            {
                "field": "Category"
            },
            {
                "field": "LossValueNum",
                "title": "Loss Value (RM)",
                "format": ",.0f"
            },
            {
                "field": "totalLoss",
                "title": "Total Loss (RM)",
                "format": ",.0f"
            }
        ]
    },
    "mark": {
        "type": "bar",
        "stroke": "black",
        "strokeWidth": 0.8
    }
}